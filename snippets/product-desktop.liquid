{% comment %}
Desktop Product Layout - Grid with Sticky Image
Usage: {% render 'product-desktop', product: product %}
{% endcomment %}

<div class="product-desktop max-w-7xl mx-auto px-4 py-12">
  <div class="grid grid-cols-2 gap-12">

    <!-- Left Column: Sticky Image Carousel -->
    <div class="sticky top-8 h-fit">
      <div class="product-badges mb-4">
        {% render 'product-badges'
        , product: product %}
      </div>
      {% render 'product-image-carousel'
      , product: product
      , mobile: false %}
    </div>

    <!-- Right Column: Product Details -->
    <div class="product-details">
      <div class="mb-6">
        {% comment %} {% if product.vendor != blank and section.settings.show_vendor %}
        <p class="text-sm text-gray-500 mb-3">{{ product.vendor }}</p>
        {% endif %} {% endcomment %}
        <h1 data-product-title class="text-4xl text-gray-900 uppercase mb-4">{{ product.title }}</h1>
      </div>

      <!-- Pricing -->
      <div class="pricing mb-8">
        {% render 'product-pricing'
        , product: product %}
      </div>

      <!-- CTA Form -->
      <div class="product-form mb-10">
        {% render 'product-form'
        , product: product %}
      </div>

      {% if product.description != blank %}
      {% render 'accordion'
      , trigger: 'Description'
      , body: product.description
      , show_specs: section.settings.show_specs
      , open: true %}
      {% endif %}

      {% render 'accordion'
      , trigger: 'Care Instructions'
      , body: product.description %}
      {% render 'accordion'
      , trigger: 'Shipping'
      , body: product.description %}
      {% render 'accordion'
      , trigger: 'Return & Exchanges'
      , body: product.description %}

    </div>
  </div>
</div>