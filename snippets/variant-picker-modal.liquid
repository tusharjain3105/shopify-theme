<style>
    #variant-picker-dialog[open] {
        animation: slide-up 0.3s ease-out forwards;
    }

    @media (min-width: 768px) {
        #variant-picker-dialog[open] {
            animation: fade-in 0.2s ease-out forwards;
        }
    }

    @keyframes slide-up {
        from {
            transform: translateY(100%);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translate(-50%, -48%);
        }

        to {
            opacity: 1;
            transform: translate(-50%, -50%);
        }
    }

    /* Reset UA styles for strict control */
    #variant-picker-dialog {
        margin: 0;
        padding: 0;
    }

    /* Mobile Only Overrides */
    @media (max-width: 767px) {
        #variant-picker-dialog {
            margin-top: auto;
            top: auto;
            bottom: 0;
            left: 0;
            right: 0;
            position: fixed;
            max-width: 100vw;
            width: 100vw;
            max-height: none;
        }
    }

    /* Desktop Overrides */
    @media (min-width: 768px) {
        #variant-picker-dialog {
            position: fixed;
            top: 50%;
            left: 50%;
            bottom: auto;
            right: auto;
            transform: translate(-50%, -50%);
            margin: 0;
            /* Reset margins to rely on top/left positioning */
            max-width: 90vw;
            max-height: 90vh;
        }
    }
</style>

<dialog id="variant-picker-dialog"
    class="bg-white p-0 backdrop:bg-black/50 w-[100vw] h-[85vh] max-h-[85vh] rounded-t-xl md:w-[900px] md:h-[600px] md:rounded-lg shadow-2xl z-[100] overflow-hidden outline-none">

    <!-- Header -->
    <div class="flex items-center justify-between p-4 border-b sticky top-0 bg-white z-10">
        <h3 class="text-lg font-bold uppercase tracking-wider font-outfit">Choose Options</h3>
        <button type="button" class="p-2 hover:bg-gray-100 rounded-full transition-colors" data-close-picker>
            {% render 'icon', icon: 'x', size: 24 %}
        </button>
    </div>

    <!-- Body -->
    <div class="flex flex-col md:flex-row h-[calc(100%-65px)] overflow-hidden">
        <!-- Gallery Section -->
        <div class="w-full md:w-1/2 bg-gray-50 h-[300px] md:h-full relative overflow-hidden group shrink-0">
            <!-- Skeleton Loading -->
            <div class="absolute inset-0 flex items-center justify-center text-gray-300 animate-pulse" data-loader>
                <div class="w-12 h-12 rounded-full border-4 border-gray-200 border-t-black animate-spin"></div>
            </div>

            <!-- Main Image -->
            <div class="w-full h-full flex items-center justify-center p-4">
                <img src="" alt="" data-main-image
                    class="max-w-full max-h-full object-contain mix-blend-multiply opacity-0 transition-opacity duration-300">
            </div>

            <!-- Dots/Thumbnails indicator -->
            <div class="hidden absolute bottom-4 left-1/2 -translate-x-1/2 gap-1.5" data-dots></div>
        </div>

        <!-- Details Section -->
        <div class="w-full md:w-1/2 p-6 overflow-y-auto flex flex-col justify-between">
            <div>
                <!-- Product Info -->
                <h2 class="text-2xl font-bold uppercase mb-2 font-outfit" data-title></h2>
                <div class="text-lg font-medium text-gray-700 mb-6" data-price></div>

                <!-- Variant Selector (Size) -->
                <div class="mb-6">
                    <div class="flex justify-between items-center mb-2">
                        <label class="font-bold text-sm uppercase" data-option-name>Size</label>
                        <button type="button" class="text-xs text-gray-500 underline" data-size-chart-trigger>Size
                            chart</button>
                    </div>
                    <div class="grid grid-cols-4 gap-2" data-variants-container>
                        <!-- Injected Buttons -->
                    </div>
                </div>
            </div>

            <!-- Footer / Add to Cart -->
            <div class="mt-auto">
                <button type="button"
                    class="w-full bg-black text-white py-4 font-bold uppercase tracking-widest hover:bg-gray-800 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
                    data-add-to-cart disabled>
                    Select Option
                </button>
            </div>
        </div>
    </div>
</dialog>

<script src="{{ 'variant-picker.js' | asset_url }}" defer="defer"></script>