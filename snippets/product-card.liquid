{% comment %}
Product Card Snippet
Usage: {% render 'product-card', product: product %}
Parameters:
- product: required product object
- card_class: optional additional CSS classes
{% endcomment %}

{% assign card_class = card_class | default: '' %}

<div class="product-card swiper-slide {{ card_class }}">
  <a href="{{ product.url }}"
    class="block rounded-xl overflow-hidden group shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white">
    <div class="relative overflow-hidden">
      {% if product.featured_image %}
      <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title | escape }}"
        class="w-full object-cover group-hover:scale-110 transition-transform duration-500 aspect-image"
        loading="lazy" />
      {% else %}
      <div class="w-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center aspect-image">
        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      {% endif %}

      <!-- Wishlist button -->
      <button type="button"
        class="absolute top-3 right-3 w-9 h-9 flex items-center justify-center rounded-full bg-white/90 hover:bg-white shadow-md hover:shadow-lg transition-all duration-200 wishlist-toggle"
        data-product-handle="{{ product.handle }}" data-product-id="{{ product.id }}"
        data-product-title="{{ product.title | escape }}" data-product-price="{{ product.price }}"
        data-product-formatted-price="{{ product.price | money }}"
        data-product-url="{{ product.url | within: collections.all }}"
        data-product-image="{{ product.featured_image | img_url: '400x400' }}" aria-label="Add to wishlist"
        title="Add to wishlist">
        <span class="sr-only">Add to wishlist</span>
        <svg
          class="w-5 h-5 text-gray-400 group-has-[.wishlist-toggle:hover]:text-red-500 group-has-[.wishlist-toggle.text-red-600]:text-red-600"
          fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      </button>



      <!-- Product badges -->
      {% if product.compare_at_price > product.price %}
      <div class="absolute top-3 left-3 bg-gray-500 text-white px-2 py-1 rounded-md text-sm font-semibold">
        Sale
      </div>
      {% endif %}

      {% unless product.available %}
      <div class="absolute top-3 right-12 bg-gray-800 text-white px-2 py-1 rounded-md text-sm font-semibold">
        Sold Out
      </div>
      {% endunless %}
    </div>

    <div class="p-5">
      <h3
        class="text-lg uppercase font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors duration-300 mb-2 line-clamp-2">
        {{ product.title }}
      </h3>

      <div class="flex items-center justify-between">
        <div class="price-container">
          {% if product.compare_at_price > product.price %}
          <span class="text-lg font-bold text-gray-600">{{ product.price | money }}</span>
          <span class="text-sm text-gray-500 line-through ml-2">{{ product.compare_at_price | money }}</span>
          {% else %}
          <span class="text-lg font-bold text-gray-900">{{ product.price | money }}</span>
          {% endif %}
        </div>

        <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </div>

      {% if product.vendor != blank %}
      <p class="text-sm text-gray-500 mt-1">{{ product.vendor }}</p>
      {% endif %}
    </div>
  </a>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>