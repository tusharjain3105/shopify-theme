{% comment %}
  Product Card Snippet
  Usage: {% render 'product-card', product: product %}
  Parameters:
  - product: required product object
  - card_class: optional additional CSS classes
{% endcomment %}

{% assign card_class = card_class | default: '' %}

<div class="product-card swiper-slide {{ card_class }}">
  <a href="{{ product.url }}" class="block rounded-xl overflow-hidden group shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white">
    <div class="relative overflow-hidden">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | img_url: '400x400' }}"
          alt="{{ product.title | escape }}"
          class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
          loading="lazy" />
      {% else %}
        <div class="w-full h-64 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
          <svg
            class="w-16 h-16 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      {% endif %}

      <!-- Product badges -->
      {% if product.compare_at_price > product.price %}
        <div class="absolute top-3 left-3 bg-gray-500 text-white px-2 py-1 rounded-md text-sm font-semibold">
          Sale
        </div>
      {% endif %}

      {% unless product.available %}
        <div class="absolute top-3 right-3 bg-gray-800 text-white px-2 py-1 rounded-md text-sm font-semibold">
          Sold Out
        </div>
      {% endunless %}
    </div>

    <div class="p-5">
      <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors duration-300 mb-2 line-clamp-2">
        {{ product.title }}
      </h3>

      <div class="flex items-center justify-between">
        <div class="price-container">
          {% if product.compare_at_price > product.price %}
            <span class="text-lg font-bold text-gray-600">{{ product.price | money }}</span>
            <span class="text-sm text-gray-500 line-through ml-2">{{ product.compare_at_price | money }}</span>
          {% else %}
            <span class="text-lg font-bold text-gray-900">{{ product.price | money }}</span>
          {% endif %}
        </div>

        <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <svg
            class="w-5 h-5 text-indigo-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </div>

      {% if product.vendor != blank %}
        <p class="text-sm text-gray-500 mt-1">{{ product.vendor }}</p>
      {% endif %}
    </div>
  </a>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>