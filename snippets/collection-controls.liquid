{% comment %}
  Collection Controls - Sort, View Toggle, Mobile Filter Toggle
  Usage: {% render 'collection-controls' %}
{% endcomment %}

<div class="collection-controls border-b border-gray-200 pb-4 mb-8">
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">

    <!-- Mobile Filter Toggle -->
    <button id="mobile-filter-toggle" class="lg:hidden bg-gray-100 px-4 py-2 rounded-lg flex items-center justify-center gap-2">
      <svg
        class="w-5 h-5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
      </svg>
      Filters
    </button>

    <!-- Sort Options -->
    <div class="sort-controls">
      <label for="sort-select" class="text-sm font-medium text-gray-700 mr-2">Sort by:</label>
      <select id="sort-select" class="border border-gray-300 rounded-md px-3 py-2 bg-white focus:ring-2 focus:ring-gray-500 focus:border-gray-500">
        <option value="manual">Featured</option>
        <option value="best-selling">Best Selling</option>
        <option value="title-ascending">A-Z</option>
        <option value="title-descending">Z-A</option>
        <option value="price-ascending">Price: Low to High</option>
        <option value="price-descending">Price: High to Low</option>
        <option value="created-ascending">Oldest First</option>
        <option value="created-descending">Newest First</option>
      </select>
    </div>

    <!-- View Toggle -->
    <div class="view-toggle flex bg-gray-100 rounded-lg p-1 hidden">
      <button id="grid-view" class="px-3 py-2 rounded-md bg-white shadow-sm transition-all">
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
        </svg>
      </button>
      <button id="list-view" class="px-3 py-2 rounded-md transition-all">
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</div>