{% comment %}
  Water Bubbles Animation Snippet - Liquid Effect with Shadows
  Usage: {% render 'water-bubbles' %}
  Optional parameters:
  - bubble_count: number of bubbles (default: 8)
  - animation_duration: animation speed in seconds (default: 20)
{% endcomment %}

{% assign bubble_count = bubble_count | default: 8 %}
{% assign animation_duration = animation_duration | default: 20 %}

<div class="water-bubbles-container">
  {% for i in (1..bubble_count) %}
    <div class="bubble bubble-{{ i }}">
      <div class="bubble-inner"></div>
      <div class="bubble-highlight"></div>
    </div>
  {% endfor %}
</div>

<style>
  .water-bubbles-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .bubble {
    position: absolute;
    border-radius: 50%;
    animation: float{{ animation_duration }}s infinite linear;
    opacity: 0.9;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.15)) drop-shadow(0 2px 6px rgba(0, 0, 0, 0.1)) blur(0.5px);
  }

  .bubble-inner {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: radial-gradient(ellipse at 30% 25%, rgba(255, 255, 255, 0.8) 0%, rgba(240, 240, 240, 0.6) 30%, rgba(217, 217, 217, 0.4) 60%, rgba(204, 204, 204, 0.3) 100%);
    backdrop-filter: blur(8px) saturate(150%);
    box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.8)
    , inset 0 -1px 2px rgba(0, 0, 0, 0.1)
    , 0 8px 16px rgba(0, 0, 0, 0.08)
    , 0 4px 8px rgba(0, 0, 0, 0.06);
  }

  .bubble-highlight {
    position: absolute;
    top: 15%;
    left: 20%;
    width: 30%;
    height: 25%;
    border-radius: 50%;
    background: radial-gradient(ellipse, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.4) 50%, transparent 100%);
    filter: blur(1px);
    animation: shimmer 4s infinite ease-in-out;
  }

  /* Individual bubble positioning - randomly placed around edges */
  .bubble-1 {
    left: 93.19%;
    top: 46.68%;
    width: 35px;
    height: 35px;
    animation-delay: -2.5s;
  }

  .bubble-2 {
    left: 0.51%;
    top: 32.01%;
    width: 50px;
    height: 50px;
    animation-delay: -5s;
  }

  .bubble-3 {
    left: 99.09%;
    top: 13.76%;
    width: 65px;
    height: 65px;
    animation-delay: -7.5s;
  }

  .bubble-4 {
    left: 7.7%;
    top: 10.87%;
    width: 80px;
    height: 80px;
    animation-delay: -10s;
  }

  .bubble-5 {
    left: 4.91%;
    top: 85.8%;
    width: 95px;
    height: 95px;
    animation-delay: -12.5s;
  }

  .bubble-6 {
    left: 6.82%;
    top: 62.55%;
    width: 110px;
    height: 110px;
    animation-delay: -15s;
  }

  .bubble-7 {
    left: 41.97%;
    top: 4.31%;
    width: 125px;
    height: 125px;
    animation-delay: -17.5s;
  }

  .bubble-8 {
    left: 1.65%;
    top: 43.71%;
    width: 140px;
    height: 140px;
    animation-delay: -20s;
  }

  @keyframes float {
    0% {
      transform: scale(0.7) rotate(0deg) translateY(10px);
      opacity: 0;
    }
    10% {
      opacity: 0.9;
      transform: scale(0.8) rotate(20deg) translateY(8px);
    }
    50% {
      transform: scale(1) rotate(180deg) translateY(-5px);
      opacity: 1;
    }
    90% {
      opacity: 0.9;
      transform: scale(1.1) rotate(340deg) translateY(-8px);
    }
    100% {
      transform: scale(1.3) rotate(360deg) translateY(-15px);
      opacity: 0;
    }
  }

  @keyframes shimmer {
    0,
    100% {
      opacity: 0.7;
      transform: scale(1) translateX(0);
    }
    50% {
      opacity: 1;
      transform: scale(1.2) translateX(2px);
    }
  }

  /* Shape shifting animation for bubble-inner */
  .bubble-inner {
    animation: morph 8s infinite ease-in-out;
  }

  @keyframes morph {
    0,
    100% {
      transform: scale(1) skew(0deg);
      border-radius: 50%;
    }
    25% {
      transform: scale(1.05, 0.95) skew(2deg);
      border-radius: 55% 45% 60% 40%;
    }
    50% {
      transform: scale(0.95, 1.05) skew(-2deg);
      border-radius: 45% 55% 40% 60%;
    }
    75% {
      transform: scale(1.02, 0.98) skew(1deg);
      border-radius: 52% 48% 45% 55%;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .bubble {
      filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.1)) blur(0.3px);
    }

    .bubble-inner {
      backdrop-filter: blur(4px) saturate(120%);
    }

    .bubble-1 {
      width: 25px;
      height: 25px;
    }
    .bubble-2 {
      width: 35px;
      height: 35px;
    }
    .bubble-3 {
      width: 45px;
      height: 45px;
    }
    .bubble-4 {
      width: 55px;
      height: 55px;
    }
    .bubble-5 {
      width: 65px;
      height: 65px;
    }
    .bubble-6 {
      width: 75px;
      height: 75px;
    }
    .bubble-7 {
      width: 85px;
      height: 85px;
    }
    .bubble-8 {
      width: 95px;
      height: 95px;
    }
  }
</style>