{% comment %}
  Search Page JavaScript Functionality
  Handles product search and display
{% endcomment %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchContainer = document.getElementById('search-products-container');
  
  if (searchContainer) {
    const searchTerms = searchContainer.dataset.searchTerms;
    const loadingSpinner = searchContainer.querySelector('.loading-spinner');
    
    // Show loading state
    if (loadingSpinner) {
      loadingSpinner.classList.remove('hidden');
    }
    
    // Fetch product search results
    fetch(`/search?q=${encodeURIComponent(searchTerms)}&type=product,article,page&view=ajax`)
      .then(response => {
        if (!response.ok) throw new Error('Network response was not ok');
        return response.text();
      })
      .then(html => {
        // Hide loading spinner
        if (loadingSpinner) loadingSpinner.classList.add('hidden');
        
        // Parse the HTML response
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        
        // Get the search results container
        const resultsContainer = doc.querySelector('.search-results-container');
        
        if (resultsContainer) {
          // Replace the entire search container with the new content
          searchContainer.outerHTML = resultsContainer.innerHTML;
          
          // Initialize any product-related scripts
          if (typeof initProductCards === 'function') {
            initProductCards();
          }
          
          // Smooth scroll to results
          setTimeout(() => {
            searchContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }, 100);
        } else {
          throw new Error('Invalid response format');
        }
      })
      .catch(error => {
        console.error('Error fetching search results:', error);
        if (loadingSpinner) loadingSpinner.classList.add('hidden');
        
        searchContainer.innerHTML = `
          <div class="col-span-full text-center py-12">
            <svg class="w-12 h-12 text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Error loading results</h3>
            <p class="text-gray-600 mb-4">We encountered an issue while searching. Please try again.</p>
            <button onclick="window.location.reload()" class="px-4 py-2 bg-gray-100 text-gray-800 rounded-md hover:bg-gray-200 transition-colors">
              Retry
            </button>
          </div>
        `;
      });
  }
});
</script>
