<div class="max-w-md mx-auto mt-8 p-6">
  {% form 'customer_login' %}
    <h1 class="text-2xl font-bold mb-6">{{ 'customer.login.title' | t }}</h1>
    
    {% if form.errors %}
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <div class="mb-4">
      <label for="customer-email" class="block text-sm font-medium text-gray-700 mb-2">{{ 'customer.login.email' | t }}</label>
      <input type="email" name="customer[email]" id="customer-email" autocomplete="email" required
             class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>

    <div class="mb-6">
      <label for="customer-password" class="block text-sm font-medium text-gray-700 mb-2">{{ 'customer.login.password' | t }}</label>
      <input type="password" name="customer[password]" id="customer-password" autocomplete="current-password" required
             class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>

    <button type="submit" class="w-full bg-black text-white py-2 px-4 rounded-md hover:bg-gray-800 transition-colors">
      {{ 'customer.login.sign_in' | t }}
    </button>
    
    <div class="mt-4 text-center space-y-2">
      <a href="{{ routes.account_register_url }}" class="text-blue-600 hover:underline">{{ 'customer.login.create_account' | t }}</a>
      <br>
      <a href="#recover" class="text-blue-600 hover:underline">{{ 'customer.login.forgot_password' | t }}</a>
    </div>
  {% endform %}

  {% form 'recover_customer_password', id: 'recover', class: 'hidden target:block' %}
    <h2 class="text-xl font-bold mb-4">{{ 'customer.recover_password.title' | t }}</h2>
    
    {% if form.errors %}
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <div class="mb-4">
      <label for="recover-email" class="block text-sm font-medium text-gray-700 mb-2">{{ 'customer.recover_password.email' | t }}</label>
      <input type="email" name="email" id="recover-email" autocomplete="email" required
             class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>

    <button type="submit" class="w-full bg-black text-white py-2 px-4 rounded-md hover:bg-gray-800 transition-colors mb-4">
      {{ 'customer.recover_password.submit' | t }}
    </button>
    
    <div class="text-center">
      <a href="#login" class="text-blue-600 hover:underline">{{ 'customer.recover_password.cancel' | t }}</a>
    </div>
  {% endform %}
</div>

{% schema %}
{
  "name": "Customer Login",
  "tag": "section",
  "class": "section"
}
{% endschema %}
