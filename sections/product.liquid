{% comment %}
  Modern Product Page with Responsive Design
  Mobile: Vertical layout with image carousel, pricing, CTA, specs, badges, recommended
  Desktop: Grid layout with sticky image carousel + product details
{% endcomment %}

<section class="product-page">
  <!-- Mobile Layout -->
  <div class="lg:hidden">
    {% render 'product-mobile', product: product %}
  </div>

  <!-- Desktop Layout -->
  <div class="hidden lg:block">
    {% render 'product-desktop', product: product %}
  </div>

  <!-- Recommended Products (Both Mobile & Desktop) -->
  <div class="recommended-products my-16">
    {% render 'product-recommendations', product: product %}
  </div>
</section>

{% schema %}
{
  "name": "Product Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_specs",
      "label": "Show specifications",
      "default": true
    },
    {
      "type": "text",
      "id": "specs_title",
      "label": "Specifications title",
      "default": "Specifications"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
