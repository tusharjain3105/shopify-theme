<script>
    // Update all font previews with custom text
    function updatePreviewText() {
        const customText = document.getElementById('customTextInput').value;
        const previewElements = document.querySelectorAll('.font-sample-content h2');

        previewElements.forEach(element => {
            element.textContent = customText || '{{ section.settings.sample_heading }}';
        });
    }

    // Update font size for all previews
    function updateFontSize(size) {
        const previewElements = document.querySelectorAll('.font-sample-content h2');
        document.getElementById('fontSizeValue').textContent = size + 'px';

        previewElements.forEach(element => {
            element.style.fontSize = size + 'px';
        });
    }

    // Update font weight for all previews
    function updateFontWeight(weight) {
        const previewElements = document.querySelectorAll('.font-sample-content h2');

        previewElements.forEach(element => {
            element.style.fontWeight = weight;
        });
    }

    function updateItalic(value) {
        const previewElements = document.querySelectorAll('.font-sample-content h2');

        previewElements.forEach(element => {
            element.style.fontStyle = value ? 'italic' : 'normal';
        });
    }

    // Reset to default text
    function resetToDefault() {
        document.getElementById('customTextInput').value = '{{ section.settings.custom_test_text }}';
        document.getElementById('fontSizeSlider').value = 36;
        document.getElementById('fontWeightSelector').value = '400';
        updatePreviewText();
        updateFontSize(36);
        updateFontWeight('400');
    }

    // Toggle individual font visibility
    function toggleFont(fontName) {
        const fontCard = document.querySelector(`[data-font="${fontName}"]`);
        const toggleBtn = fontCard.querySelector('.font-card-toggle');

        if (fontCard.classList.contains('hidden')) {
            fontCard.classList.remove('hidden');
            toggleBtn.textContent = 'Hide';
        } else {
            fontCard.classList.add('hidden');
            toggleBtn.textContent = 'Show';
        }

        updateVisibleCount();
    }

    // Show all fonts
    function showAllFonts() {
        const allCards = document.querySelectorAll('.font-sample-card');
        const allToggles = document.querySelectorAll('.font-card-toggle');

        allCards.forEach(card => card.classList.remove('hidden'));
        allToggles.forEach(btn => btn.textContent = 'Hide');

        updateVisibleCount();
    }

    // Hide all fonts
    function hideAllFonts() {
        const allCards = document.querySelectorAll('.font-sample-card');
        const allToggles = document.querySelectorAll('.font-card-toggle');

        allCards.forEach(card => card.classList.add('hidden'));
        allToggles.forEach(btn => btn.textContent = 'Show');

        updateVisibleCount();
    }

    // Update visible font count
    function updateVisibleCount() {
        const allCards = document.querySelectorAll('.font-sample-card');
        const visibleCards = document.querySelectorAll('.font-sample-card:not(.hidden)');
        document.getElementById('visibleCount').textContent = visibleCards.length;
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function () {
        const textInput = document.getElementById('customTextInput');
        textInput.addEventListener('input', updatePreviewText);

        // Set initial font weight
        const initialWeight = document.getElementById('fontWeightSelector').value;
        updateFontWeight(initialWeight);

        // Set initial text if custom text exists
        if (textInput.value.trim()) {
            updatePreviewText();
        }

        // Initialize visible count
        updateVisibleCount();
    });
</script>

